---
import DesktopNavigation from '../components/DesktopNavigation.astro';
import MobileNavigation from '../components/MobileNavigation.astro';
import Footer from '../components/Footer.astro';
export interface Props {
    title: string;
}

const { title } = Astro.props as Props;
---

<html lang="nb">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="icon" type="image/x-icon" href="/favicon.svg" />
        <title>{title}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css?family=Xanh+Mono:400%7CSource+Sans+Pro:400%7CJosefin+Sans:700%7COpen+Sans+Condensed:700%7CSorts+Mill+Goudy%7CZilla+Slab:600,500i"
            rel="stylesheet"
        />
    </head>
    <body>
    <header>
        <a href="/"><img alt="Braud toastbar homepage" src="/logo.svg"></a>
    
        <MobileNavigation />
        <DesktopNavigation />

    </header>
        <slot />
    <Footer />
    </body>
</html>
<style>
    html {
        font-family: 'Source Sans Pro',Verdana,Geneva,sans-serif;
    }

    body {
        margin-left: 3.5vw;
        margin-right: 3.5vw;
    }

    header {
        display: grid;
        grid-template-columns: auto auto;
        justify-content: space-between;
        align-items: center;
        margin: 15px;
        margin-top: 0;
    }
    img {
	    height: 100%;
	    width: 100%;
    }
</style>
