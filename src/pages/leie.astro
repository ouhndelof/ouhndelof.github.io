---
import Layout from '../layouts/Layout.astro';
import Carousel from '../components/ImageCarousel'
import 'react-image-gallery/styles/css/image-gallery.css'
import fs from 'fs'
import path from 'path'

var images = []
var images2 = []
var filenames = fs.readdirSync('public/images/leie');

filenames.forEach((filename) => {
    if (['.JPG'].includes(path.extname(filename))) {
        images.push({
            original: `/images/leie/${filename}`,
            thumbnail: `/images/leie/${filename}`
        });
    }
});

filenames.forEach((filename) => {
    if (['.jpg'].includes(path.extname(filename).toLowerCase())) {
        images2.push(`/images/leie/${filename}`);
    }
});
